{
    "name": "root/www",
    "version": "1.0.0",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require": {
        "php": "^8.2",
        "slim/slim": "^4.15",
        "slim/psr7": "^1.8"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^4.0",
        "friendsofphp/php-cs-fixer": "^3.91",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "fix": "vendor/bin/php-cs-fixer fix",
        "test-style": "vendor/bin/php-cs-fixer fix --dry-run --verbose",
        "phpstan": "phpstan analyse"
    }
}
